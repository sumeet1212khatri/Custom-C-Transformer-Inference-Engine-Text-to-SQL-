<body>
    <div class="container">
        <div class="header">
            <h1>‚ö° C++ Transformer Engine</h1>
            <p>Framework-Free | CPU-Only | Pure Performance</p>
        </div>

        <div class="main-card">
            <label for="prompt">üîç Enter Your Query (English)</label>
            <textarea id="prompt" placeholder="Example: Get all users from Pune"></textarea>
            
            <button class="btn-generate" onclick="generateSQL()">üöÄ Generate SQL</button>
            
            <div id="error" class="error"></div>
            <div class="result-box" id="result">Waiting for input...</div>
        </div>
    </div>

    <script>
        // FastAPI Connection URL
        const API_URL = 'http://127.0.0.1:8000'; 

        async function generateSQL() {
            const promptText = document.getElementById('prompt').value.trim();
            const resultBox = document.getElementById('result');
            const errorBox = document.getElementById('error');

            // Clear previous results/errors
            errorBox.textContent = '';
            resultBox.textContent = 'Processing...';

            if (!promptText) {
                errorBox.textContent = '‚ö†Ô∏è Please enter a query first!';
                return;
            }

            try {
                // FIXED: Sending key "text" to match Python's BaseModel
                const response = await fetch(`${API_URL}/generate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ text: promptText }) 
                });

                if (!response.ok) {
                    throw new Error(`Server Error: ${response.status}`);
                }

                const data = await response.json();
                
                // FIXED: Display the result
                resultBox.textContent = data.result || 'No output returned.';
                
            } catch (error) {
                console.error(error);
                resultBox.textContent = 'Error occurred.';
                errorBox.textContent = `‚ùå Connection Failed: ${error.message}. Is server.py running?`;
            }
        }
    </script>
</body>
