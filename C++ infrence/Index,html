        textarea { width: 100%; min-height: 120px; padding: 20px; font-size: 1.1em; border: 3px solid #667eea; border-radius: 15px; margin-bottom: 20px; }
        .btn-generate { width: 100%; padding: 20px; font-size: 1.3em; font-weight: bold; color: white; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; border-radius: 15px; cursor: pointer; transition: transform 0.2s; }
        .btn-generate:hover { transform: translateY(-3px); }
        .result-box { background: #1e1e1e; color: #00ff00; padding: 25px; border-radius: 15px; font-family: 'Courier New', monospace; margin-top: 20px; white-space: pre-wrap; min-height: 50px; }
